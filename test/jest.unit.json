{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": ["<rootDir>/src", "<rootDir>/prisma"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^prisma/(.*)$": "<rootDir>/prisma/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "testMatch": ["<rootDir>/**/*.spec.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "\\.integration\\.spec\\.ts$"],
  "setupFilesAfterEnv": ["<rootDir>/test/jest.unit.setup.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid|@openrouter|p-limit|yocto-queue)/)"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{ts,js}",
    "!<rootDir>/src/pipelines-v2/**",
    "!<rootDir>/src/**/*.spec.{ts,js}",
    "!<rootDir>/src/**/*.module.{ts,js}",
    "!<rootDir>/src/**/*.controller.{ts,js}",
    "!<rootDir>/src/main.{ts,js}",
    "!<rootDir>/src/**/*.e2e-spec.{ts,js}"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": ["text-summary", "lcov"],
  "testEnvironment": "node"
}
